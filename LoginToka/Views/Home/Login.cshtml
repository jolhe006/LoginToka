@model LoginToka.Models.User

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "center-block", @style = "width:350px; margin-top: 50px;", role = "form" }))
{
    <div class="card card-container">

        @Html.AntiForgeryToken()
        @if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }
        <div >
            <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />

            @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" } )
            <div class="input-group input-group-lg">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user" aria-hidden="true"></i></span>
                @Html.TextBoxFor(a => a.usuario, new { @class = "form-control ", @placeholder = "Usuario" })
            </div>
            @Html.ValidationMessageFor(a => a.usuario, null, new { @class = "text-danger" })
            <div class="input-group input-group-lg">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
                @Html.PasswordFor(a => a.password, new { @class = "form-control", @placeholder = "Password" }) 
            </div>
            @Html.ValidationMessageFor(a => a.password, null, new { @class = "text-danger" })
            
            <input type="submit" value="Login" class="btn btn-lg btn-success" />             
        </div>
    </div>
}  

